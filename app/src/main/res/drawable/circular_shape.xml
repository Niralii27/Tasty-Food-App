<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer border -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#000000" /> <!-- Black border -->
        </shape>
    </item>
    <!-- Inner circle (background for the image) -->
    <item
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" /> <!-- Background inside the border -->
        </shape>
    </item>
</layer-list>


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="15dp"
    android:background="@drawable/rounded_corner_background"
    android:gravity="center_vertical">

    <!-- Product Image -->
    <ImageView
        android:id="@+id/imageUrl"
        android:layout_width="68dp"
        android:layout_height="68dp"/>

    <!-- Product Details -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="8dp">

        <!-- Item Name -->
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Black Grape"
            android:textSize="18sp"
            android:textColor="@android:color/black" />

        <!-- Row with Label and Price per kg -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="4dp">

            <!-- Label TextView on the left side of price -->


            <!-- Space between label and price -->
            <Space
                android:layout_width="4dp"
                android:layout_height="wrap_content" />

            <!-- Price per kg -->
            <TextView
                android:id="@+id/originalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="122 / kg"
                android:textSize="14sp"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- Quantity Controls below price per kg -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="4dp"
            android:gravity="center">

            <!-- Decrement Button -->
            <TextView
                android:id="@+id/decrement_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:text="-"
                android:textSize="16sp"
                android:background="#FF9000"
                android:textColor="@android:color/white" />

            <!-- Quantity -->
            <TextView
                android:id="@+id/quantity"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:text="1"
                android:textSize="16sp"
                android:textColor="@android:color/black" />

            <!-- Increment Button -->
            <TextView
                android:id="@+id/increment_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:text="+"
                android:textSize="16sp"
                android:background="#FF9000"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </LinearLayout>

    <!-- Total Price -->
    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="â‚¹ 122"
        android:textSize="18sp"
        android:textColor="@android:color/black" />

    <ImageView
        android:id="@+id/swipedImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_gravity="end"
        android:visibility="gone"
        android:src="@drawable/delete" />
</LinearLayout>

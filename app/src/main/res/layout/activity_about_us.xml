<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/background"
    tools:context=".AboutUsActivity">

    <!-- App Logo -->
    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_marginTop="72dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- About Us Title -->
    <TextView
        android:id="@+id/aboutUsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Us"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/orange"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/logoImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- About Us Description -->
    <TextView
        android:id="@+id/aboutUsDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Welcome to Tasty, your one-stop solution for delicious food! We offer a variety of dishes from across the world, made with fresh ingredients and delivered straight to your door. Our goal is to bring happiness to every meal. Explore our menu and experience the best in taste and convenience."
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:lineSpacingExtra="4dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/aboutUsTitle"
        />






</androidx.constraintlayout.widget.ConstraintLayout>
